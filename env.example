# Babel - Private Solana RPC Node Configuration

# Solana RPC Configuration
SOLANA_NETWORK=mainnet-beta
RPC_PORT=8899
WS_PORT=8900
METRICS_PORT=9091

# RPC Performance Tuning (adjust based on hardware)
RPC_THREADS=16
ACCOUNT_INDEX=spl-token-owner,spl-token-mint,program-id
HISTORY=full
ENABLE_BIGTABLE=false

# Babel Manager Configuration
MANAGER_PORT=4000
MANAGER_METRICS_PORT=9092
ERLANG_COOKIE=change_this_to_random_secret_cookie
LOG_LEVEL=info

# Monitoring Stack
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=change_this_admin_password

# API Security (generate with: openssl rand -hex 32)
API_KEY=your_secret_api_key_here
RATE_LIMIT_PER_SECOND=1000

